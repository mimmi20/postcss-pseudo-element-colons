{
  "name": "postcss-pseudo-element-colons",
  "version": "1.0.0",
  "description": "PostCSS plugin to format single or double colon notation on pseudo elements.",
  "main": "index.js",
  "scripts": {
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "typecheck": "vitest typecheck",
    "postcss": "postcss ./test/fixtures/*.test.{css,scss} --config ./test/fixtures/postcss.config.mjs -r",
    "pack": "npm pack",
    "release": "npm login && npx clean-publish",
    "prettier": "prettier --config prettier.config.mjs --check index.js test/*.js eslint.config.mjs prettier.config.mjs",
    "prettier-fix": "prettier --config prettier.config.mjs --write index.js test/*.js eslint.config.mjs prettier.config.mjs",
    "eslint": "eslint . --config eslint.config.mjs",
    "eslint-fix": "eslint . --config eslint.config.mjs --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timelsass/postcss-pseudo-element-colons.git"
  },
  "keywords": [
    "postcss",
    "pseudo-elements",
    "pseudo",
    "colons",
    "format",
    "stylelint",
    "pseudo-element",
    "colon"
  ],
  "author": "Tim Elsass",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/timelsass/postcss-pseudo-element-colons/issues"
  },
  "homepage": "https://github.com/timelsass/postcss-pseudo-element-colons#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vitest/coverage-istanbul": "^4.0.15",
    "clean-publish": "^6.0.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.7.4",
    "vitest": "^4.0.8"
  },
  "peerDependencies": {
    "postcss": "^8.0.0"
  },
  "type": "module",
  "engines": {
    "node": "^20.19.0 || ^22.12.0 || >= 24.0.0"
  }
}
